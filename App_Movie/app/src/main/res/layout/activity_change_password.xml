<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".Login.ChangePasswordActivity">
    <FrameLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Đổi mật khẩu"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:drawableTint="@color/white" />
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:src="@drawable/icon_left_row"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </FrameLayout>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lotie_timKiem"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:lottie_autoPlay="true"
        android:scaleType="fitXY"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/change_pass"
        >
    </com.airbnb.lottie.LottieAnimationView>
    <FrameLayout
        android:layout_width="match_parent"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

    <EditText
        android:id="@+id/edtOldPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/custom_background_white_border"
        android:drawableLeft="@drawable/icon_key_khoa"
        android:drawablePadding="20dp"
        android:drawableTint="@color/white"
        android:drawableTintMode="multiply"
        android:hint="Mật khẩu cũ của bạn"
        android:inputType="textPassword"
        android:lines="1"
        android:paddingLeft="10dp"
        android:textColor="@color/white"
        android:fontFamily="@font/baloo_da"
        android:textColorHint="#777777" />

    <ImageView
        android:id="@+id/imgShowOldPass"
        android:layout_width="30dp"
        app:tint="@color/white"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="270dp"
        android:scaleType="fitXY"
        android:src="@drawable/icon_eye_hiden" />
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/edtNewPass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custom_background_white_border"
            android:drawableLeft="@drawable/icon_key_khoa"
            android:drawablePadding="20dp"
            android:fontFamily="@font/baloo_da"
            android:drawableTint="@color/white"
            android:drawableTintMode="multiply"
            android:hint="Nhập mật khẩu mới"
            android:inputType="textPassword"
            android:lines="1"
            android:paddingLeft="10dp"
            android:textColor="@color/white"
            android:textColorHint="#777777" />

        <ImageView
            android:id="@+id/imgNewPass"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:tint="@color/white"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="270dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_eye_hiden" />
    </FrameLayout>

    <TextView
        android:id="@+id/tvMessagePass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="Mật khẩu tối thiểu 6 ký tự"
        android:textAlignment="textEnd"
        android:textColor="#FF0000"
        android:textSize="15dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/edtReTypePass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custom_background_white_border"
            android:drawableLeft="@drawable/icon_key_khoa"
            android:drawablePadding="20dp"
            android:fontFamily="@font/baloo_da"
            android:drawableTint="@color/white"
            android:drawableTintMode="multiply"
            android:hint="Nhập lại mật khẩu mới"
            android:inputType="textPassword"
            android:lines="1"
            android:paddingLeft="10dp"
            android:textColor="@color/white"
            android:textColorHint="#777777" />

        <ImageView
            android:id="@+id/imgReTypePass"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:tint="@color/white"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="270dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_eye_hiden" />
    </FrameLayout>
    <TextView
        android:id="@+id/btnChangePass"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/custom_background_green"
        android:paddingTop="10dp"
        android:text="Đổi mật khẩu"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:textStyle="bold" />
    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_width="100dp"
        android:layout_marginTop="130dp"
        android:scaleType="fitXY"
        android:src="@drawable/logo"
        android:layout_height="100dp"/>
</LinearLayout>