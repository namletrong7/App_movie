<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".Home.HomeActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_weight="9.2"
        android:layout_height="0dp">
        <FrameLayout
            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        </FrameLayout>
        <LinearLayout
            android:id="@+id/layout_toolbar"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/nen"
            android:orientation="horizontal"
            android:weightSum="10">

            <ImageView
                android:id="@+id/imgDetal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:scaleType="fitXY"
                android:src="@drawable/logo" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7" />

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:paddingTop="9dp"
                android:layout_marginEnd="0dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:paddingBottom="3dp"
                android:layout_marginRight="20dp"
              android:scaleX="2"
                android:scaleY="2"
                app:tint="@color/white"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/chuong" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:paddingRight="10dp"
                android:layout_weight="1"
                android:src="@drawable/poster_phim"
                app:civ_border_color="#333333"
                app:civ_border_width="2dp" />
        </LinearLayout>
    </FrameLayout>



    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:background="@drawable/custom_background_green_toi"
        android:layout_height="0dp"
        android:layout_weight="0.8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="4">

            <LinearLayout
                android:id="@+id/layOutTrangChu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:weightSum="2"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/lottie_trangChu"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@drawable/icon_home"
                    app:tint="@color/white"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    android:layout_weight="1.3"
                    />

                <TextView
                    android:id="@+id/tvTrangChu"
                    android:layout_weight="0.7"
                    android:text="Trang chủ"
                    android:textSize="14dp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutTruyenHinh"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:weightSum="2"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/lottie_truyenHinh"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.3"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    android:src="@drawable/icon_tivi"
                    app:backgroundTint="@color/white"
                    app:tint="#DDDDDD"
                    />

                <TextView
                    android:id="@+id/tvTruyenHinh"
                    android:layout_weight="0.7"
                    android:text="Truyền hình"
                    android:textSize="14dp"
                    android:textColor="#DDDDDD"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutTimKiem"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:weightSum="2"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/lotie_timKiem"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.3"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    android:src="@drawable/icon_search"
                    app:tint="#DDDDDD"
                    />

                <TextView
                    android:id="@+id/tvTimKiem"
                    android:layout_weight="0.7"
                    android:text="Tìm kiếm"
                    android:textSize="14dp"
                    android:textColor="#DDDDDD"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutCaNhan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:weightSum="2"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/lotie_caNhan"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.3"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    android:src="@drawable/icon_user"
                    app:tint="#DDDDDD"
                    />
                <TextView
                    android:id="@+id/tvCaNhan"
                    android:layout_weight="0.7"
                    android:text="Cá nhân"
                    android:textSize="14dp"
                    android:textColor="#DDDDDD"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout >