<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".Login.LoginActivity">
    <FrameLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:gravity="center"
            android:fontFamily="@font/baloo_da"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Đăng nhập"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:drawableTint="@color/white" />
    </FrameLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/poster" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edtPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textStyle="bold"
                android:background="@drawable/custom_background_white_border"
                android:drawableLeft="@drawable/icon_phone_number"
                android:drawablePadding="20dp"
                android:drawableTint="@color/white"
                android:drawableTintMode="multiply"
                android:fontFamily="@font/sf_pro"
                android:hint="Số điện thoại"
                android:inputType="phone"
                android:lines="1"
                android:maxLength="10"
                android:paddingLeft="10dp"
                android:textColor="@color/white"
                android:textColorHint="#777777" />

            <TextView
                 android:id="@+id/tvMessagePhone"
                 android:textAlignment="textEnd"
                 android:textSize="15dp"
                 android:fontFamily="@font/sf_pro"
                 android:textColor="#FF0000"
                android:textStyle="bold"
                 android:text="số điện thoại có 10 chữ số"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/edtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:fontFamily="@font/sf_pro"
                    android:background="@drawable/custom_background_white_border"
                    android:drawableLeft="@drawable/icon_key_khoa"
                    android:drawablePadding="20dp"
                    android:drawableTint="@color/white"
                    android:drawableTintMode="multiply"
                    android:hint="Mật khẩu"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:textStyle="bold"
                    android:maxLength="20"
                    android:paddingLeft="10dp"
                    android:textColor="@color/white"
                    android:textColorHint="#777777" />

                <ImageView
                    android:id="@+id/imgShowPass"
                    android:layout_width="27dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="270dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_eye_hiden" />

            </FrameLayout>
            <TextView
                android:id="@+id/tvMessagePass"
                android:textAlignment="textEnd"
                android:textSize="15dp"
                android:textColor="#FF0000"
                android:textStyle="bold"
                android:fontFamily="@font/sf_pro"
                android:text="Mật khẩu tối thiểu 6 ký tự"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvForgotPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="@font/sf_pro"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Quên mật khẩu ?"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btnLogin"
                android:fontFamily="@font/sf_pro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/custom_background_green_toi"
                android:text="Đăng nhập"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:fontFamily="@font/sf_pro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:text="Bạn chưa có tài khoản?"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tvSignUp"
                    android:fontFamily="@font/sf_pro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="fitXY"
                    android:text="Đăng ký"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_width="100dp"
            android:layout_marginTop="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/logo"
            android:layout_height="100dp"/>

</LinearLayout>