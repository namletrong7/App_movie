<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Home.UserFragment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content" >
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="30dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/icon_left_row"
                android:backgroundTint="@color/white"
                android:layout_height="30dp"/>
            <TextView
                android:text="Tài Khoản"
                android:textColor="@color/white"
                android:textSize="27dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="#c0c0c0"
                app:cardCornerRadius="10dp"
                android:layout_margin="5dp"
                android:alpha="0.3"
                android:layout_width="match_parent"
                android:layout_height="70dp">
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent" >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgUserTaiKhoan"
                    android:layout_width="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/poster_phim"
                    android:layout_marginStart="20dp"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="1dp"
                    android:layout_height="50dp"/>

                <TextView
                    android:id="@+id/tvSDT"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-thin"
                    android:gravity="center_vertical"
                    android:paddingLeft="40dp"
                    android:text="0337356550"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:textStyle="bold" />

            </LinearLayout>
        </FrameLayout>
        <LinearLayout
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_user_line_white"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
            <TextView
                android:drawableRight="@drawable/right_row"
                android:id="@+id/tvThonTinTaiKhoan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-thin"
                android:gravity="center_vertical"
                android:paddingLeft="40dp"
                android:text="Thông tin tài khoản"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/traitim"
                android:layout_marginStart="10dp"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
            <TextView
                android:drawableRight="@drawable/right_row"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-thin"
                android:gravity="center_vertical"
                android:paddingLeft="40dp"
                android:text="Danh sách của tôi"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_history_view"
                android:layout_marginStart="10dp"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
            <TextView
                android:drawableRight="@drawable/right_row"
                android:id="@+id/tvLichSuXem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-thin"
                android:gravity="center_vertical"
                android:paddingLeft="40dp"
                android:text="Lịch sử xem"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_device"
                android:layout_width="25dp"
                android:layout_marginStart="10dp"
                android:layout_height="25dp"/>
            <TextView
                android:drawableRight="@drawable/right_row"
                android:id="@+id/tvDevice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-thin"
                android:gravity="center_vertical"
                android:paddingLeft="40dp"
                android:text="Quản lý thiết bị"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_security"
                android:layout_width="25dp"
                android:layout_marginStart="10dp"
                android:layout_height="25dp"/>
            <TextView
                android:drawableRight="@drawable/right_row"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-thin"
                android:gravity="center_vertical"
                android:paddingLeft="40dp"
                android:text="Điều khoản sử dụng"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_support"
                android:layout_width="25dp"
                android:layout_marginStart="10dp"
                android:layout_height="25dp"/>

            <TextView
                android:drawableRight="@drawable/right_row"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-thin"
                android:gravity="center_vertical"
                android:paddingLeft="40dp"
                android:text="Trung tâm hỗ trợ"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:src="@drawable/icon_gop_y" />

            <TextView
                android:drawableRight="@drawable/right_row"
                android:id="@+id/tvGopY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-thin"
                android:gravity="center_vertical"
                android:paddingLeft="40dp"
                android:text="Góp ý"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:src="@drawable/icon_infor" />

            <TextView
                android:drawableRight="@drawable/right_row"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-thin"
                android:gravity="center_vertical"
                android:paddingLeft="40dp"
                android:text="Về ứng dụng"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_sgin_out"
                android:layout_width="25dp"
                android:layout_marginStart="10dp"
                android:layout_height="25dp"/>
            <TextView
                android:drawableRight="@drawable/right_row"
                android:id="@+id/tvDangXuat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-thin"
                android:gravity="center_vertical"
                android:paddingLeft="40dp"
                android:text="Đăng xuất"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>
        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_width="100dp"
            android:layout_marginTop="50dp"
            android:scaleType="fitXY"
            android:src="@drawable/logo"
            android:layout_height="100dp"/>
    </LinearLayout>
</ScrollView>